.login-container {
    height: 60%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.login-poster {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 300rpx;
}

.login-image{
    display: flex;
    justify-content: center;
    height: 150rpx;
    width: 150rpx;
}

.login-signup{
    color:#576b95;
    font-size: 30rpx;
}

.login-signup-hover{
    color:#576b95;
    opacity: 0.8;
}
